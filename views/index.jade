extends layout

block content
	include navPublic
	.container-narrow
		- if(error)
			.alert.alert-error 
				strong #{error}
		.row			
			.pull-left
				h1 PictureHub
				p A truly awesome image collection.
				img.img-rounded(src="images/cat1.jpg", height="400px", width="400px")
			
			.well.pull-right
				form(action="/login", method="post")
					label
						strong Log In!
					div.input-prepend
						span.add-on
							i.icon-user
						input.span3(type="text", name="username", placeholder="Username")
					br
					.input-prepend
						span.add-on
							i.icon-lock
						input.span3(type="password", name="password", placeholder="Password")		
					br
					button.btn.btn-primary.btn-large(type="submit") Login
			.pull-right
				form(action="/register", method="get")
					label Want to add to our collection?
					button.btn(type="submit") Sign up!
				form(action="/catIndex", method="get")
					label Browse our gallery - no account needed!
					button.btn(type="submit") View Categories