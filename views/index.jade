extends layout

block content
	div(class="container-narrow")
		div(class="pull-left")
			h1= title
			p A truly awesome image collection.
			img(src="images/cat1.jpg", height="400px", width="400px")
		
		div(class="well pull-right")
			form#login-form(action="/home", method="post")
				label
					strong Log In!
				div(class="input-prepend")
					span(class="add-on")
						i(class="icon-user")
					input(type="text", class="span3", placeholder="Username")
				br
				div(class="input-prepend")
					span(class="add-on")
						i(class="icon-lock")
					input(type="password", class="span3", placeholder="Password")		
				br
				button(class="btn btn-primary", type="submit") Login			
		form#register-btn(class="pull-right", action="/register", method="post")
			label Want to start adding pictures?
			button(class="btn", type="submit") Sign up!