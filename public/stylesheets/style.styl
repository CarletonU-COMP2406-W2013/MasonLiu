body
	padding-top: 60px
	padding-bottom: 40px
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
	color: #00B7FF
.container-narrow
	margin: 0 auto
	max-width: 900px
#upload-form
	clear: left

.center-element
	text-align: center
	
#registerFormContainer
	padding-top: 100px
	
#viewer-horizon
	color: white
	background-color: transparent
	text-align: center
	position: absolute
	top: 50%
	left: 0px
	width: 100%
	height: 1px
	overflow: visible
	visibility: visible
	display: block

#viewer-carousel
	margin-left: -250px
	position: absolute
	top: -250px
	left: 50%
	width: 500px
	height: 500px
	
.carousel
	margin-bottom: 60px
	.container
		position: relative
		z-index: 9
	.item
		height: 500px
	img
		position: absolute
		top: 0
		left: 0
		min-width: 100%
		hieght: 500px
.carousel-control
	height: 80px
	margin-top: 0
	font-size: 120
	text-shadow: 0 1px 1px rgba(0,0,0,.4)
	background-color: transparent
	border: 0
	z-index: 10
.carousel-caption
	background-color: transparent
	position: static
	max-width: 550px
	padding 0 20px
	margin-top: 200px
	h1, .lead
		margin: 0
		line-height: 1.25
		color: #fff
		text-shadow: 0 1px 1px rgba(0,0,0,.4)
	.btn
		margin-top: 10px